<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:paddingVertical="6dp"
    android:layout_marginVertical="5dp"
    android:paddingHorizontal="5dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/itemImage"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            />
<!--        <TextView-->
<!--            android:layout_width="250dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/itemName"-->
<!--            android:text="Task 1"-->
<!--            android:textSize="18sp"-->
<!--            android:layout_toEndOf="@id/itemImage"-->
<!--            android:layout_marginStart="20dp"-->
<!--            android:gravity="center_vertical"-->
<!--            />-->
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            >

            <TextView
                android:id="@+id/actual_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18/08/2023"
                android:textColor="@color/blue_gray_700"
                android:visibility="gone"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/planning_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/blue_gray_500"
                android:textSize="10sp"
                android:text="18/08/2023" />

            <TextView
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue_gray_700"
                android:text="Order Successfully Completed"
                android:textSize="15sp"
                />

        </LinearLayout>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/itemDetails"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_gravity="center"
            android:contentDescription="more actions"
            app:icon="@drawable/baseline_expand_more_24"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>