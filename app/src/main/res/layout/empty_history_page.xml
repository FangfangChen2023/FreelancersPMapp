<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/empty_history_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:strokeColor="@color/reply_orange_500"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

    <TextView
        android:id="@+id/empty_history_statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineProvider="none"
        android:text="No history project yet"
        android:textColor="@color/blue_gray_200"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/empty_history_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:outlineProvider="none"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="10dp"
        android:text="Let's go to the home page to finish a project!"
        android:textColor="@color/blue_gray_400"
        android:textSize="20dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>